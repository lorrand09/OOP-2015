<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true" tools:context=".Welcome">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="120dp"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"
        />

    <TextView
        android:id="@+id/gin_rummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gin - Rummy"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="250dp"
        android:textSize="25sp"
        android:textColor="@android:color/holo_blue_dark"
        />

    <TextView
        android:layout_below="@+id/gin_rummy"
        android:id="@+id/instructions"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/play"
        android:layout_below="@+id/gin_rummy"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/instructions"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"/>

</RelativeLayout>